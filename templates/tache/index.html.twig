{% extends 'base.html.twig' %}

{% block title %}Tache index{% endblock %}

{% block body %}
    <h1>Tache index</h1>

    <table class="table">
        <thead>
            <tr class="text-center">
                <th>Id</th>
                <th>Projet</th>
                <th>Description</th>
                <th>Date debut</th>
                <th>Date achevement</th>
                <th>Nombre heure</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tache in taches %}
            <tr>
                <td>{{ tache.id }}</td>
                <td>{{ tache.projet }}</td>
                <td><a href="{{ path('app_tache_show', {'id': tache.id}) }}">{{ tache.description }}</a></td>
                <td>{{ tache.dateDebut ? tache.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ tache.dateAchevement ? tache.dateAchevement|date('Y-m-d') : '' }}</td>
                <td>{{ tache.nombreHeure }}</td>
                <td>{{ tache.laststatut }}</td>
                <td>
                    <a href="{{ path('app_tache_show', {'id': tache.id}) }}">show</a>
                    <a href="{{ path('app_tache_edit', {'id': tache.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tache_new', {'projet_id': 0}) }}">Create new</a>
{% endblock %}
